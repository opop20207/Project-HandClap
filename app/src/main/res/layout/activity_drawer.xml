<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:importantForAccessibility="no"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:layout_width="240sp"
    android:background="@color/colorBasicDarkula"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/drawer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp">

        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentStart="true"
            android:onClick="onClickMain"
            android:background="@drawable/close_menu"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:id="@+id/close_drawer"/>

        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:onClick="onClickMainTo"
            android:layout_alignParentEnd="true"
            android:background="@drawable/set"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:id="@+id/open_set" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/white"
        android:layout_marginTop="15sp"
        tools:ignore="SmallSp" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:groupIndicator="@drawable/expandable_indicator"
        android:divider="@null"
        android:transcriptMode="alwaysScroll"
        android:id="@+id/timetable_list" >

    </ExpandableListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/white"
        tools:ignore="SmallSp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickMainTo"
        android:text="시간표 추가"
        android:fontFamily="@font/font"
        android:textColor="@color/colorBasic"
        android:background="@color/colorBasicDarkula"
        android:gravity="center_vertical|left"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginStart="15sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/open_add_timetable"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/white"
        tools:ignore="SmallSp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickMainTo"
        android:text="시간표 삭제"
        android:fontFamily="@font/font"
        android:textColor="@color/colorBasic"
        android:background="@color/colorBasicDarkula"
        android:gravity="center_vertical|left"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginStart="15sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/open_delete_timetable"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/white"
        tools:ignore="SmallSp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickMainTo"
        android:text="사진"
        android:fontFamily="@font/font"
        android:textColor="@color/colorBasic"
        android:background="@color/colorBasicDarkula"
        android:gravity="center_vertical|left"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginStart="15sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/open_gallery" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorBasic"
        tools:ignore="SmallSp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickMainTo"
        android:text="녹음"
        android:fontFamily="@font/font"
        android:textColor="@color/colorBasic"
        android:background="@color/colorBasicDarkula"
        android:gravity="center_vertical|left"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginStart="15sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/open_recorder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorBasic"
        tools:ignore="SmallSp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickMainTo"
        android:text="메모"
        android:fontFamily="@font/font"
        android:textColor="@color/colorBasic"
        android:background="@color/colorBasicDarkula"
        android:gravity="center_vertical|left"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginStart="15sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/open_memo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorBasic"
        tools:ignore="SmallSp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickMainTo"
        android:text="일정"
        android:fontFamily="@font/font"
        android:textColor="@color/colorBasic"
        android:background="@color/colorBasicDarkula"
        android:gravity="center_vertical|left"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginStart="15sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/open_schedule"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorBasic"
        tools:ignore="SmallSp" />
</LinearLayout>